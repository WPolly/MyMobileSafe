<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/AppTitleStyle"
        android:text="号码归属地查询" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_address_to_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入七位以上手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_query_address"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/button_select_contact"
            android:text="查询" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_area_to_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入要查询的长途区号"
            android:inputType="phone"
            android:maxLength="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_query_area"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/button_select_contact"
            android:text="查询" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_query_result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:textSize="30sp" />

</LinearLayout>